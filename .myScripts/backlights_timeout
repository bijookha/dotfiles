#keyboard
sudo echo "auto" > /sys/bus/usb/devices/1-1/power/level
sudo echo "auto" > /sys/bus/usb/devices/1-1/power/control
sudo echo "60000" > /sys/bus/usb/devices/1-1/power/autosuspend_delay_ms
#mouse
sudo echo "auto" > /sys/bus/usb/devices/1-2/power/level
sudo echo "auto" > /sys/bus/usb/devices/1-2/power/control
sudo echo "60000" > /sys/bus/usb/devices/1-2/power/autosuspend_delay_ms
